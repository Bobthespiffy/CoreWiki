@page
@model CoreWiki.RazorPages.Pages.LatestChangesModel

@{
    ViewData["Title"] = "Latest Changes";
}

<h2>Latest Changes</h2>

<p>
    <a asp-page="Create">New article</a>
</p>
<table class="table">
    <tbody>
        @foreach (var item in Model.Article)
        {
            <div class="card border border-primary">
                <div class="card-header">
                    <h3 class="card-title">
                        <a href="~/@item.Topic">@item.Topic</a>
                    </h3>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted"><span data-value="@item.Published" class="timeStampValue">@item.Published.ToString()</span></h6>

                    <a class="card-link" asp-page="./Edit" asp-route-id="@item.Topic">Edit</a>
                    <a class="card-link" asp-page="./Delete" asp-route-id="@item.Topic">Delete</a>
                </div>
            </div>
        }
    </tbody>
</table>